<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="clickHandler"
            type="com.example.attendancetracker.ClickHandler" />

        <variable
            name="signUpModel"
            type="com.example.attendancetracker.models.SignUpModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SignUpActivity">

        <ProgressBar
            android:id="@+id/progress_Bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_name_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/signUpActivity_name_hint"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/txt_email_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_password_warning"
                android:visibility="@{ TextUtils.isEmpty(signUpModel.email)? View.GONE : View.VISIBLE}" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/password_hint"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/txt_password_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_password_warning"
                android:visibility="@{TextUtils.isEmpty(signUpModel.password)|| signUpModel.wordLength > 8?  View.GONE : View.VISIBLE}" />

            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{clickHandler::onButtonClick}"
                android:text="@string/signUpActivity_btn_signIn" />

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="auto"
                android:onClick="@{clickHandler::onButtonClick}"
                android:text="@string/signUpActivity_TxtBtn_login"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</layout>
